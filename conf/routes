# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /game/:id                   controllers.HomeController.game(id : Long)

GET     /                           controllers.HomeController.store
GET     /store                      controllers.HomeController.store
GET     /search/                    controllers.HomeController.search

GET     /forum/:id                  controllers.HomeController.forum(id : Long)
GET     /thread/:id                 controllers.HomeController.thread(id : Long)

GET     /forum/create/:id           controllers.ForumController.createThread(id: Long)
GET     /thread/create/:id          controllers.ForumController.createPost(id: Long)

POST     /store/create              controllers.StoreController.create

GET     /login                      controllers.LoginController.login
POST    /loginSubmit                controllers.LoginController.form
GET     /logout                     controllers.LoginController.logout

GET     /register                   controllers.UserController.create
GET     /user/:id                   controllers.UserController.profile(id: Integer)
GET     /user/update/:id            controllers.UserController.update(id: Integer)
GET     /user/delete/:id            controllers.UserController.delete(id: Integer)
POST    /user/submit                controllers.UserController.customer
POST    /user/admin                 controllers.UserController.admin

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file)
